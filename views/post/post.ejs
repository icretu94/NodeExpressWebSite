<%  include ../layouts/header.ejs %>

  <div class="main">
    <div class="container">
      <div class="content">

        <div class="post">
          <div class="top">
            <h2>
              <%=post.title %>
            </h2>
          </div>
          <div class="body">
            <%=post.body %>
          </div>
          <div class="bottom">
            <div class="author">
              Author:
              <a href="/users/<%=user.login %>">
              <%=user.login %>
            </a>
            </div>
          </div>
        </div>

        <div class="comments" id="<%=post.id %>">
        <h3>Comments</h3>
        <div class="comment-list">
          <%- include('../layouts/comments.ejs', {items: comments}) %>

            <form class="comment">
              <textarea name="body"></textarea>
              <div class="buttons">
                <button class="cancel secondary">Cancel</button>
                <button class="send">Send</button>
              </div>
            </form>
        </div>
      </div>


      </div>

      <% include ../layouts/sidebar.ejs %>

    </div>
  </div>

  <% include ../layouts/footer.ejs %>